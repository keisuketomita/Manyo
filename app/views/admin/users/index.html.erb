<h1>ユーザー管理画面</h1>
<%= link_to '新規登録', new_admin_user_path, class: "btn btn-primary post" %>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>ユーザーid</th>
      <th>ユーザー名</th>
      <th>メールアドレス</th>
      <th>登録済みタスク数</th>
      <th>管理者</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr >
        <th id="line-ad-id"><%= user.id %></th>
        <td id="line-ad-name"><%= user.name %></td>
        <td id="line-ad-email"><%= user.email %></td>
        <td id="line-ad-tasks"><%= user.tasks.count %></td>
        <td id="line-ad-admin">
          <%= user.admin %>
          <% if user != current_user %>
            <%= link_to '切替', change_admin_admin_user_path(user.id), class: "btn-sm btn-outline-warning", id: "line-ad-link-admin" %>
          <% end %>
        </td>
        <td id="line-ad-link_detail"><%= link_to '詳細', admin_user_path(user.id), class: "btn btn-outline-primary"  %></td>
        <td id="line-ad-link_edit"><%= link_to '編集', edit_admin_user_path(user.id), class: "btn btn-outline-success"  %></td>
        <td id="line_ad-link-delete"><%= link_to '削除', admin_user_path(user.id), method: :delete,
          data: { confirm: '本当に削除していいですか？' }, class: "btn btn-outline-danger", id: "confirm_delete" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @users%>
