<h1>タスク一覧</h1>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>ラベル名</th>
    </tr>
  </thead>
  <tbody>
    <% @labels.each do |label| %>
      <tr>
        <th id="line-count"><%= @row_count %></th>
        <td id="line-name"><%= label.name %></td>
        <td id="line-link_edit"><%= link_to '編集', edit_label_path(label.id), class: "btn btn-outline-success"  %></td>
        <td id="line-linl_delete"><%= link_to '削除', label_path(label.id), method: :delete,
          data: { confirm: '本当に削除していいですか？' }, class: "btn btn-outline-danger" %></td>
      </tr>
      <% @row_count += 1 %>
    <% end %>
  </tbody>
</table>
<%= link_to '新規登録', new_label_path, class: "btn btn-primary post" %>
<%= paginate @labels%>
