<!DOCTYPE html>
<html>
  <head>
    <title>Manyo</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <div class="notice">
        <% flash.each do |key, value| %>
        <p><%= content_tag(:div, value, class: "#{key}") %></p>
        <% end %>
      </div>
      <%= yield %>
    </div>
  </body>
</html>
