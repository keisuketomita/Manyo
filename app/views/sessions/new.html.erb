<%= form_with(scope: :session, url: sessions_path, local: true) do |f| %>
  <div class="form-inline">
    <div class="form-group">
      <label class="sr-only" for="eMail"></label>
      <%= f.email_field :email ,class: "form-control", placeholder: "メールアドレス", id:"eMail_session", size: "16"%>
    </div>
    <div class="form-group">
      <label class="sr-only" for="password"></label>
      <%= f.password_field :password ,class: "form-control", placeholder: "パスワード", id:"password_session", size: "16"%>
    </div>
    <%= f.submit "ログイン", data: {disable_with:"creating･･･"}, class: "btn btn-outline-primary" %>
  </div>
<% end %>
