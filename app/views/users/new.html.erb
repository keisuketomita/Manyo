<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= t("errors.template.header", model: "作成しようとしているアカウント", count: @user.errors.count) %></h2>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<%= form_with(model: @user, local: true) do |f| %>
  <div class="form-inline">
    <div class="form-group">
      <label class="sr-only" for="uID"></label>
      <%= f.text_field :name ,class: "form-control", placeholder: "ユーザー名", id:"uID", size: "16"%>
    </div>
    <div class="form-group">
      <label class="sr-only" for="eMail"></label>
      <%= f.email_field :email ,class: "form-control", placeholder: "メールアドレス", id:"eMail", size: "16"%>
    </div>
    <div class="form-group">
      <label class="sr-only" for="password"></label>
      <%= f.password_field :password ,class: "form-control", placeholder: "パスワード", id:"password", size: "16"%>
    </div>
    <div class="form-group">
      <label class="sr-only" for="password_confirmation"></label>
      <%= f.password_field :password_confirmation ,class: "form-control", placeholder: "パスワード（確認）", id:"password_confirmation", size: "16"%>
    </div>
    <%= f.submit "アカウント作成", data: {disable_with:"creating･･･"}, class: "btn btn-outline-primary" %>
  </div>
<% end %>
